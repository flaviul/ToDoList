<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>servlet.AddItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <url-pattern>/addItemServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddListServlet</servlet-name>
        <servlet-class>servlet.AddListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddListServlet</servlet-name>
        <url-pattern>/addListServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetActiveListsServlet</servlet-name>
        <servlet-class>servlet.GetActiveListsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetActiveListsServlet</servlet-name>
        <url-pattern>/getActiveListsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCurrentTasksServlet</servlet-name>
        <servlet-class>servlet.GetCurrentTasksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetCurrentTasksServlet</servlet-name>
        <url-pattern>/getCurrentTasksServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateItemServlet</servlet-name>
        <servlet-class>servlet.UpdateItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateItemServlet</servlet-name>
        <url-pattern>/updateItemServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>servlet.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signUpServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateListServlet</servlet-name>
        <servlet-class>servlet.UpdateListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateListServlet</servlet-name>
        <url-pattern>/updateListServlet</url-pattern>
    </servlet-mapping>

</web-app>
